@model PLOLMS.Models.Cell

@{
    ViewBag.Title = "Create And View Cell List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateAndView</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cell Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CellName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CellName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CellName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CellCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CellCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CellCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CellDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CellDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CellDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<h2>Cell List</h2>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayName("Cell Name")
        </th>
        <th>
            @Html.DisplayName("Cell Code")
        </th>
        <th>
            @Html.DisplayName("Cell Description")
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in ViewBag.Cells)
    {
        <tr>
            <td>
                @item.CellName
            </td>
            <td>
                @item.CellCode
            </td>
            <td>
                @item.CellDesc
            </td>
           
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CellId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CellId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CellId })
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

