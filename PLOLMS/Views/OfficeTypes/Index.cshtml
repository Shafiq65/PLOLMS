@model IEnumerable<PLOLMS.Models.OfficeType>

@{
    ViewBag.Title = "Office Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#OfficeTypeList').dataTable({
            "paging": true
        });
    });
</script>

<h2>Office Type</h2>
<hr />
<table id="OfficeTypeList" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Code")
            </th>
            <th>
                @Html.DisplayName("Descrption")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OTName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OTCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OTDesc)
                </td>

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.OTId }, new { @class = "btn btn-primary" }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.OTId }, new { @class = "btn btn-warning" })
                    @*|
                        @Html.ActionLink("Delete", "Delete", new { id = item.OTId })*@
                </td>
            </tr>
        }

    </tbody>
</table>

