@model PLOLMS.Models.OfficeType


@{
    ViewBag.Title = "Create And View Office Type List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>OfficeType</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.OTName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OTCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OTDesc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<h2>Office Type List</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Code")
            </th>
            <th>
                @Html.DisplayName("Descrition")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.OfficeTypes)
        {
            <tr>
                <td>
                    @item.OTName
            </td>
            <td>
                @item.OTCode
            </td>
            <td>
                @item.OTDesc
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OTId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OTId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OTId })
            </td>
        </tr>
        }

    </tbody>
</table>





<div>
    @Html.ActionLink("Back to List", "Index")
</div>

