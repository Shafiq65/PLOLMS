@model PLOLMS.Models.OfficeType


@{
    ViewBag.Title = "Create And View Office Type List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#OfficeTypeList').dataTable({
            "paging": true
        });
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Office Type</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTDesc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<hr />
<table id="OfficeTypeList" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Code")
            </th>
            <th>
                @Html.DisplayName("Descrption")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.OfficeTypes)
        {
            <tr>
                <td>
                    @item.OTName
                </td>
                <td>
                    @item.OTCode
                </td>
                <td>
                    @item.OTDesc
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OTId }, new { @class="btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OTId }, new { @class = "btn btn-warning" }) 
                    @*|
                    @Html.ActionLink("Delete", "Delete", new { id = item.OTId })*@
                </td>
            </tr>
        }

    </tbody>
</table>

