@model PLOLMS.Models.Designation

@{
    ViewBag.Title = "CreateAndView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#DesignationsList').dataTable({
            "paging": true
        });
    });
</script>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Designation Information</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Dname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dname, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4"></div>
            </div>

        <div class="form-group">
            @Html.Label("Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DesignationCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DesignationCode, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DDesc, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            @Html.Label("IsActive", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
                
                </div>
          
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}



<table id="DesignationsList" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Code")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Designations)
            {
            <tr>
                <td>
                    @item.Dname
                </td>
                <td>
                    @item.DesignationCode
                </td>
                <td>
                    @item.DDesc
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DId }, new { @class = "btn btn-primary btn-md " })
                    @Html.ActionLink("Details", "Details", new { id = item.DId }, new { @class = "btn btn-warning btn-sm " })
                    @* @Html.ActionLink("Delete", "Delete", new { id = item.DId }, new { @class = "btn btn-danger btn-sm " })*@


                </td>
            </tr>
        }
    </tbody>
</table>







