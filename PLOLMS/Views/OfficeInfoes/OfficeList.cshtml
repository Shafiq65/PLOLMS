@model IEnumerable<PLOLMS.Models.view_OfficeInfoDetails>

@{
    ViewBag.Title = "Office List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#OfficeInfoList').dataTable({
            "paging": true
        });
    });
</script>

<h2>Office List of -- @ViewBag.OfficeTypeName</h2>
<hr />
@if (ViewBag.OfficeTypeId != 1)
{
    <p>
        @Html.ActionLink("Create New", "CreateOfficeByType",new { OTId = ViewBag.OfficeTypeId }, new { @class = "btn btn-primary" })
    </p> 
}
<hr />
<table id="OfficeInfoList" class="table table-striped table-bordered" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OfficeCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentOfficeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeIsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentOfficeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeIsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { OfficeId = item.OfficeId }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "OfdiceDetailsById", new { OfficeId = item.OfficeId }, new { @class = "btn btn-warning" }) 
                    @*|
                    @Html.ActionLink("Delete", "Delete", new { OfficeId = item.OfficeId })*@
                </td>
            </tr>
        }
    </tbody>

</table>
