@model PLOLMS.Models.DivisionInfo

@{
    ViewBag.Title = "CreateAndView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#DivisionInfoesList').dataTable({
            "paging": true
        });
    });
</script>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Division Infomation</h3>
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DivisionName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DivisionName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            @Html.Label("Code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DivisionCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DivisionCode, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DivisionDesc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DivisionDesc, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4"></div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}


<table id="DivisionInfoesList" class="table table-striped table-bordered" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Code")
                </th>
                <th>
                    @Html.DisplayName("Description")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.DivisionInfoes)
                {
                <tr>
                    <td>
                        @item.DivisionName
                    </td>
                    <td>
                        @item.DivisionCode
                    </td>
                    <td>
                        @item.DivisionDesc
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DivisionId }, new { @class = "btn btn-primary btn-md " })
                        @Html.ActionLink("Details", "Details", new { id = item.DivisionId }, new { @class = "btn btn-warning btn-sm " })
                        @* @Html.ActionLink("Delete", "Delete", new { id = item.DivisionId }, new { @class = "btn btn-danger btn-sm " })*@


                    </td>
                </tr>
            }
        </tbody>
    </table>

